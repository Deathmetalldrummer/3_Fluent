mixin systemRequirements()
	.systemRequirements
		h2.systemRequirements__title System Requirements
		.systemRequirements__items
			.systemRequirements__item
				+someArticle('Browsers','#','Google Chrome, Firefox, Opera, Safari 11+, IE11/MS Edge')
			.systemRequirements__item
				+someArticle('Server Requirements','#','PHP 5.4+ (PHP 5.5.9+ for Grav) with Curl, OpenSSL Libraries and Multibyte String Support')
			.systemRequirements__item
				+someArticle('Platforms','#','Joomla 3.8+, WordPress 4.9+, Grav 1.3+')
